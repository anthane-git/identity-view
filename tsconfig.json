{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"allowJs": false,
		"skipLibCheck": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"types": ["vite/client"],
		"baseUrl": "src",
		"plugins": [{ "name": "typescript-plugin-css-modules" }],
		"paths": {
			"@components": ["components"],
			"@constants": ["constants"],
			"@contexts": ["contexts"],
			"@services": ["services"],
			"@helpers": ["helpers"],
			"@config": ["config"],
			"@router": ["router"],
			"@assets": ["assets"],
			"@styles": ["styles"],
			"@hooks": ["hooks"],
			"@utils": ["utils"],
			"@views": ["views"],
			"@types": ["types"],
			"@app": ["app"]
		}
	},
	"include": ["src"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
